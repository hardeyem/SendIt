{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "impliedStrict": true,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-mutable-export": true,
    "no-restricted-globals": [
      "error",
      "event",
      "fdescribe"
    ],
    "no-console": "off",
    "no-unused-vars" : "warn",
    "no-undef" : "warn"
  },
  "globals": {
    "require": true,
    "process": true,
    "module": true,
    "exports": true,
    "__dirname": true
  }
}